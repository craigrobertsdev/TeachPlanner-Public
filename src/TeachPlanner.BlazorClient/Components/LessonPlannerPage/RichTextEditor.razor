@using static Pages.LessonPlanner

<TinyMCE.Blazor.Editor ScriptSrc="/js/tinymce/tinymce.min.js" JsConfSrc="tinymceConf" Value="@Text"/>

<style>
    .tox-edit-area {
        cursor: text;
    }
</style>

@code {
    [Inject] public IJSRuntime JSRuntime { get; set; } = default!;
    [Parameter] public string Text { get; set; } = string.Empty;

    public async Task<RTEContent> GetContent()
    {
        var content = await JSRuntime.InvokeAsync<RTEContent>("getRTEContent");
        return content;
    }
}
@using TeachPlanner.BlazorClient.Common.Enums
@using TeachPlanner.BlazorClient.Components.Shared

<dialog ref="lessonOverlapDialog" class="w-96 p-3 text-lg text-center border border-darkGreenBorder">
    <p class="p-2">
        The number of periods for this lesson creates an overlap with another lesson. Continuing will cause that lesson to be overwritten and
        that data will be lost.
    </p>
    <p class="p-2">Do you want to continue?</p>
    <div class="flex justify-around">
        <Button Variant="ButtonTypes.Submit" OnClick="OnConfirm">
            Yes
        </Button>
        <Button Variant="ButtonTypes.Cancel" OnClick="OnCancel">
            Cancel
        </Button>
    </div>
</dialog>

@code {
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}
